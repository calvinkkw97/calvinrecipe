<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10sp">

        <TextView
            android:id="@+id/recipeNameTvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:text="Recipe Name"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/cuisineMainTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:text="Cuisine Type"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/recipeIvMain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/recipelogo"/>
        <TextView
            android:id="@+id/emailTvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Email"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <!--<TextView
            android:id="@+id/recipeIdTvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Email"
            android:textColor="@color/black"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/recipeDescTvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Email"
            android:textColor="@color/black"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/ingredientsTvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Email"
            android:textColor="@color/black"
            android:visibility="gone"/>-->


    </LinearLayout>

</androidx.cardview.widget.CardView>